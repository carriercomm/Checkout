<% group = GroupDecorator.decorate(f.object.group) unless f.object.new_record? %>
<tr class="fields">
  <td>
    <%= f.input :id, :as => :hidden %>
    <% if f.object.id.nil? %>
      <%= f.association :group, :wrapper => :tabular %>
    <% else %>
      <%= group.name %>
      <%= f.input :group_id, :as => :hidden, :wrapper => :tabular %>
    <% end %>
  </td>
  <td>
    <%= f.input :expires_at,
                :as => :date_picker,
                :wrapper => :tabular,
                :input_html => { :class => "generic_datepicker" } %>
  </td>
  <td><%= f.input :supervisor, :wrapper => :tabular %></td>
  <% # TODO: style this button... auth? %>
  <td><%= f.link_to_remove t('helpers.actions.delete'), :class => "delete-link" %></td>
</tr>
