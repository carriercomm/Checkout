<% title t('page_titles.show.covenant') %>
<% subtitle covenant.name %>

<dl class="dl-horizontal">
  <dt><strong><%= t('simple_form.labels.covenant.name') %></strong></dt>
  <dd><%= @covenant.name %></dd>
  <dt><strong><%= t('simple_form.labels.covenant.description') %></strong></dt>
  <dd><%= @covenant.description %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              covenants_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_covenant_path(@covenant), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              covenant_path(@covenant),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
