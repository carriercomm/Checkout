<%# TODO: extract this modal out into a partial %>
<div class="modal fade hide" id="budget_modal">
  <%# TODO: extract this notification out into a partial %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">×</button>
    <h3><%= t('page_titles.new.budget') %></h3>
  </div>
  <div class="modal-body">
    <div class="hide alert alert-error">
      <a class="close" data-dismiss="alert">×</a>
      <span class="error-message"></span>
    </div>
    <%= simple_form_for Budget.new,
        :remote => true,
        :format => :json,
        :html => { :class => 'form-horizontal new-budget modal-form' } do |f| %>
      <%= f.input :number %>
      <%= f.input :name %>
      <%= f.input :starts_at, :include_blank => true %>
      <%= f.input :ends_at,   :include_blank => true %>
      <div class="modal-footer">
        <%= link_to 'Cancel', '#', :class => 'btn', "data-dismiss" => "modal" %>
        <%= f.submit nil, :class => 'btn btn-primary modal-submit' %>
      </div>
    <% end %>
  </div>
</div>
