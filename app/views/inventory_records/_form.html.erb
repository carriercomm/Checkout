<%= simple_form_for(@inventory_record) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :missing %>
    <%= f.association :component %>
    <%= f.association :loan %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
